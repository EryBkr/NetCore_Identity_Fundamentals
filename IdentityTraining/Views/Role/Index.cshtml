@model IEnumerable<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a class="btn btn-sm btn-primary" asp-action="AddRole" asp-controller="Role">Yeni Rol Oluştur</a>
<table class="table table-sm table-hover">
    <tr>
        <td>Id</td>
        <td>Ad</td>
        <td>Islem</td>

    </tr>
    @if (Model.Count() > 0)
    {
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <a asp-action="UpdateRole" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Güncelle</a>
                    <a asp-action="DeleteRole" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="2">Role bulunmuyor</td>
        </tr>
    }

</table>

