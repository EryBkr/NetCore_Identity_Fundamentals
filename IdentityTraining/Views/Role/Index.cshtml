@model IEnumerable<AppRole> 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <a class="btn btn-sm btn-primary" asp-action="AddRole" asp-controller="Role">Yeni Rol Oluştur</a>
    <table class="table table-sm table-hover">
        <tr>
            <td>Id</td>
            <td>Ad</td>
        </tr>
        @if (Model.Count() > 0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2">Role bulunmuyor</td>
            </tr>
        }

    </table>

