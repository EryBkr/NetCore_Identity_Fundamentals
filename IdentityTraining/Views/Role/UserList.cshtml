@model List<AppUser>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-sm table-hover">
    <tr>
        <td>Id</td>
        <td>Ad</td>
        <td>Email</td>
        <td>Roller</td>
        <td>Islem</td>

    </tr>
    @if (Model.Count() > 0)
    {
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                <td>
                    <RolGoster user-id="@item.Id"></RolGoster> @*Tag helper a user id i gönderdik*@
                </td>
                <td>
                    <a asp-action="AssignRole" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Rol Ata</a>
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="2">Kullanıcı bulunmuyor</td>
        </tr>
    }

</table>

