@model IEnumerable<RoleAssignViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <form asp-action="AssignRole" method="post" class="w-75 mx-auto p-3">
        @foreach (var item in Model)
        {
        <div class="form-check">
            <input  type="hidden" asp-for="@item.RoleId" />
            <input class="form-check-input" type="checkbox" name="@item.Name" value="@item.Exist" />
            <label class="form-check-label" for="@item.Name">@item.Name</label>
        </div>
        }
    <input class="btn btn-sm btn-success" type="submit" name="name" value="Kaydet" />
    </form>
